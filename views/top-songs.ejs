<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top Songs</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>Top Songs</h1>
            <div class="auth-buttons">
                <% if (!user) { %>
                    <a href="/signin" class="btn auth-btn">Login</a>
                <% } else { %>
                    <a href="/profile" class="btn auth-btn">Profile</a>
                    <a href="/logout" class="btn auth-btn logout-btn">Logout</a>
                <% } %>
            </div>
        </header>
        <main>
            <section class="top-rated">
                <h2>Top Rated Songs</h2>
                <ul>
                    <% topRated.forEach(song => { %>
                        <li>
                            <strong><%= song.title %></strong> by <%= song.artist %>
                            <br>
                            <em><%= song.album || "Unknown Album" %></em> | <%= song.genre || "Unknown Genre" %> (<%= song.release_year || "Unknown Year" %>)
                            <br>
                            Rating: <%= song.rating %>
                        </li>
                    <% }) %>
                </ul>
            </section>
            <section class="top-played">
                <h2>Top Played Songs</h2>
                <ul>
                    <% topPlayed.forEach(song => { %>
                        <li>
                            <strong><%= song.title %></strong> by <%= song.artist %>
                            <br>
                            <em><%= song.album || "Unknown Album" %></em> | <%= song.genre || "Unknown Genre" %> (<%= song.release_year || "Unknown Year" %>)
                            <br>
                            Plays: <%= song.play_count %>
                        </li>
                    <% }) %>
                </ul>
            </section>
        </main>
    </div>
</body>
</html>
