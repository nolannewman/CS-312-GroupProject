<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Music Player</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <header>
            <div class="search-container">
                <form action="/" method="GET" class="search-form">
                    <input
                        type="text"
                        name="query"
                        value="<%= query || '' %>"
                        placeholder="Search by title, album, artist, or genre..."
                        class="search-bar"
                    />
                    <button type="submit" class="btn search-btn">Search</button>
                </form>

                <div class="auth-buttons">
                    <% if (!user) { %>
                        <a href="/signin" class="btn auth-btn">Login</a>
                    <% } else { %>
                        <a href="/profile" class="btn auth-btn">Profile</a>
                        <a href="/logout" class="btn auth-btn logout-btn">Logout</a>
                    <% } %>
                </div>
            </div>
        </header>
        <main>
            <div class="playlists">
                <h2>Playlists</h2>
                <ul>
                    <li>Favorite Songs</li>
                </ul>

                <h2>Recently Played</h2>
                <ul id="recentlyPlayed">
                    <% recentlyPlayed.slice(0, 5).forEach((title) => { %>
                        <li><%= title %></li>
                    <% }); %>
                </ul>
            </div>
            <div class="songs">
                <h2>Songs</h2>
                <ul>
                    <% songs.forEach((song, index) => { %>
                        <li>
                            <button class="play-btn" data-index="<%= index %>" data-title="<%= song.title %>">▶</button>
                            <div>
                                <strong><%= song.title %></strong> by <%= song.artist %>
                                <br>
                                <em><%= song.album || "Unknown Album" %></em> | <%= song.genre || "Unknown Genre" %> (<%= song.release_year || "Unknown Year" %>)
                            </div>
                        </li>
                    <% }); %>
                </ul>
            </div>
        </main>
        <footer>
            <div class="now-playing">
                <p>No song playing</p>
            </div>
            <div class="recommendation">
                <p>No recommendation available</p>
            </div>
            <div class="progress-container">
                <span class="elapsed-time">0:00</span>
                <input type="range" id="progress-bar" min="0" max="100" value="0">
                <span class="remaining-time">0:00</span>
            </div>
            <div class="controls">
                <button id="prev-btn">⏮</button>
                <button id="pause-btn">⏸</button>
                <button id="play-btn">▶</button>
                <button id="next-btn">⏭</button>
            </div>
            <div class="volume-slider">
                <label for="volume">Volume</label>
                <input type="range" id="volume" min="0" max="1" step="0.01" value="1">
            </div>
        </footer>
    </div>

    <script src="/script.js"></script>
</body>
</html>
