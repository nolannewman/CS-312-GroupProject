<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Music Player</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        /* Shading styles for active like/dislike */
        .like-btn.active {
            background-color: #0f0; /* Green for like */
            color: #fff;
        }

        .dislike-btn.active {
            background-color: #f00; /* Red for dislike */
            color: #fff;
        }

        .artist-rating-btn.active {
            background-color: #4caf50; /* Green */
            color: white;
            font-weight: bold;
            border: 2px solid #388e3c;
        }

        nav {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 15px;
        }

        nav a {
            text-decoration: none;
            padding: 10px 15px;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
            font-size: 1em;
        }

        nav a:hover {
            background-color: #0056b3;
        }

        .search-container {
            margin-bottom: 20px;
        }

        .search-bar {
            padding: 10px;
            width: calc(100% - 110px);
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .search-btn {
            padding: 10px 15px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .search-btn:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Welcome to the Music Player</h1>

            <!-- Navigation Bar -->
            <nav>
                <a href="/top-songs" class="btn nav-btn">Top Songs</a>
                <% if (!user) { %>
                    <a href="/signin" class="btn nav-btn">Login</a>
                <% } else { %>
                    <a href="/profile" class="btn nav-btn">Profile</a>
                    <a href="/logout" class="btn nav-btn logout-btn">Logout</a>
                <% } %>
            </nav>

            <!-- Search Bar -->
            <div class="search-container">
                <form action="/" method="GET" class="search-form">
                    <input
                        type="text"
                        name="query"
                        value="<%= query || '' %>"
                        placeholder="Search by title, album, artist, or genre..."
                        class="search-bar"
                    />
                    <button type="submit" class="btn search-btn">Search</button>
                </form>
            </div>
        </header>

        <main>
            <section class="playlists">
                <h2>Your Playlists</h2>
                <ul>
                    <% playlists.forEach(playlist => { %>
                        <li>
                            <strong><%= playlist.name %></strong>
                            <ul>
                                <% playlist.songs.forEach(song => { %>
                                    <li><%= song %></li>
                                <% }) %>
                            </ul>
                        </li>
                    <% }) %>
                </ul>
            </section>

            <div class="songs">
                <h2>Songs</h2>
                <ul>
                    <% songs.forEach((song, index) => { %>
                        <li>
                            <button class="play-btn" data-index="<%= index %>" data-title="<%= song.title %>">‚ñ∂</button>
                            <div>
                                <strong><%= song.title %></strong> by <%= song.artist %>
                                <br>
                                <em><%= song.album || "Unknown Album" %></em> | <%= song.genre || "Unknown Genre" %> (<%= song.release_year || "Unknown Year" %>)
                            </div>
                            <% if (user) { %>
                                <div class="like-dislike-buttons">
                                    <button class="like-btn" data-id="<%= song.id %>">üëç Like</button>
                                    <button class="dislike-btn" data-id="<%= song.id %>">üëé Dislike</button>
                                </div>
                                <div class="artist-rating-buttons" data-artist="<%= song.artist %>">
                                    Rate this artist:
                                    <button class="artist-rating-btn" data-rating="1">1</button>
                                    <button class="artist-rating-btn" data-rating="2">2</button>
                                    <button class="artist-rating-btn" data-rating="3">3</button>
                                    <button class="artist-rating-btn" data-rating="4">4</button>
                                    <button class="artist-rating-btn" data-rating="5">5</button>
                                </div>
                            <% } %>
                        </li>
                    <% }); %>
                </ul>
            </div>
        </main>

        <footer>
            <div class="now-playing">
                <p>No song playing</p>
            </div>
            <div class="recommendation">
                <p>No recommendation available</p>
            </div>
            <div class="progress-container">
                <span class="elapsed-time">0:00</span>
                <input type="range" id="progress-bar" min="0" max="100" value="0">
                <span class="remaining-time">0:00</span>
            </div>
            <div class="controls">
                <button id="prev-btn">‚èÆ</button>
                <button id="pause-btn">‚è∏</button>
                <button id="play-btn">‚ñ∂</button>
                <button id="next-btn">‚è≠</button>
            </div>
            <div class="volume-slider">
                <label for="volume">Volume</label>
                <input type="range" id="volume" min="0" max="1" step="0.01" value="1">
            </div>
        </footer>
    </div>
    <script src="/script.js"></script>
</body>
</html>
