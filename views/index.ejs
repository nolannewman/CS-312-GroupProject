<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Music Player</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <header>
            <input type="text" placeholder="Search for music..." class="search-bar">
            <button class="btn profile">Profile</button>
            <button class="btn logout">Logout</button>
        </header>
        <main>
            <div class="playlists">
                <h2>Playlists</h2>
                <ul>
                    <li>Favorite Songs</li>
                    <li>Recently Played</li>
                </ul>
            </div>
            <div class="songs">
                <h2>Songs</h2>
                <ul>
                    <% songs.forEach((song) => { %>
                        <li>
                            <button class="play-btn" data-file="<%= song.file_path %>">▶</button>
                            <div>
                                <strong><%= song.title %></strong> by <%= song.artist %>
                                <br>
                                <em><%= song.album || "Unknown Album" %></em> | <%= song.genre || "Unknown Genre" %> (<%= song.release_year || "Unknown Year" %>)
                            </div>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </main>
        <footer>
            <div class="now-playing">
                <p>No song playing</p>
            </div>
            <div class="progress-container">
                <span class="elapsed-time">0:00</span>
                <input type="range" id="progress-bar" min="0" max="100" value="0">
                <span class="remaining-time">0:00</span>
            </div>
            <div class="controls">
                <button id="prev-btn">⏮</button>
                <button id="pause-btn">⏸</button>
                <button id="play-btn">▶</button>
                <button id="next-btn">⏭</button>
            </div>
            <div class="volume-slider">
                <label for="volume">Volume</label>
                <input type="range" id="volume" min="0" max="1" step="0.01" value="1">
            </div>
        </footer>
    </div>
    <script src="/script.js"></script>
</body>
</html>
